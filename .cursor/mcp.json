{
  "mcpServers": {
    "memory": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "-v",
        "claude-memory:/app/dist",
        "--rm",
        "mcp/memory"
      ]
    },
    "motion": {
      "command": "npx",
      "args": [
        "-y",
        "motion-ai"
      ]
    },
    "prismic": {
      "command": "npx",
      "args": [
        "-y",
        "@prismicio/mcp-server@latest"
      ]
    }
  }
}